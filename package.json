{
	"name": "vite-plugin-lingo",
	"version": "0.0.1",
	"description": "Visual translation editor for .po files in Vite projects",
	"license": "AGPL-3.0-or-later",
	"author": "Michael-Obele",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Michael-Obele/vite-plugin-lingo.git"
	},
	"scripts": {
		"dev": "bun run build:ui && concurrently -n main,ui -c blue,green \"vite dev\" \"vite build --config vite.ui.config.ts --watch\"",
		"dev:simple": "vite dev",
		"dev:ui": "vite --config vite.ui.config.ts",
		"build": "bun run build:svelte && bun run build:plugin && bun run build:ui && publint",
		"build:ui": "vite build --config vite.ui.config.ts",
		"build:ui:watch": "vite build --config vite.ui.config.ts --watch",
		"build:svelte": "svelte-kit sync && svelte-package",
		"build:plugin": "tsup",
		"package": "svelte-kit sync && svelte-package && publint",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"prepublishOnly": "bun run build"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"main": "./dist/plugin/index.cjs",
	"module": "./dist/plugin/index.js",
	"types": "./dist/plugin/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"import": {
				"types": "./dist/plugin/index.d.ts",
				"default": "./dist/plugin/index.js"
			},
			"require": {
				"types": "./dist/plugin/index.d.cts",
				"default": "./dist/plugin/index.cjs"
			}
		},
		"./components": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"peerDependencies": {
		"vite": "^5.0.0 || ^6.0.0 || ^7.0.0",
		"svelte": "^4.0.0 || ^5.0.0"
	},
	"peerDependenciesMeta": {
		"svelte": {
			"optional": true
		}
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/kit": "^2.48.5",
		"@sveltejs/package": "^2.5.6",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.17",
		"@vitest/browser-playwright": "^4.0.10",
		"concurrently": "^9.2.1",
		"playwright": "^1.56.1",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.7.1",
		"publint": "^0.3.15",
		"svelte": "^5.43.8",
		"svelte-check": "^4.3.4",
		"tailwindcss": "^4.1.17",
		"tsup": "^8.5.1",
		"typescript": "^5.9.3",
		"vite": "^7.2.2",
		"vitest": "^4.0.10",
		"vitest-browser-svelte": "^2.0.1"
	},
	"keywords": [
		"vite-plugin",
		"vite",
		"i18n",
		"translation",
		"po",
		"gettext",
		"localization",
		"wuchale",
		"svelte",
		"editor"
	],
	"dependencies": {
		"@lucide/svelte": "^0.555.0",
		"@types/gettext-parser": "^8.0.0",
		"autoprefixer": "^10.4.22",
		"gettext-parser": "^8.0.0",
		"mode-watcher": "^1.1.0",
		"sirv": "^3.0.2"
	}
}
